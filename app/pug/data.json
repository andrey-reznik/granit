{
    "$schema": "./schema.data.json",
    "documents": [
        {
            "name": "index",
            "title": "Гранит",
            "color_scheme": "#ffcc00"
        }
    ],
    "sections": [
        {
            "name": "header",
            "id": "$.name",
            "modals": [
                {
                    "id": "$.name",
                    "name": "callback",
                    "form": {
                        "action": "/",
                        "method": "POST",
                        "class": "form",
                        "title": "Оставьте заявку",
                        "inputs": [
                            {
                                "id": "input-name",
                                "type": "text",
                                "placeholder": "Введите Ваше имя",
                                "name": "name",
                                "class": "input",
                                "label": {
                                    "value": "Ваше имя:",
                                    "class": "form-label",
                                    "id": "label-name"
                                }
                            },
                            {
                                "id": "input-phone",
                                "type": "tel",
                                "placeholder": "Введите Ваш номер телефона",
                                "name": "phone",
                                "class": "input",
                                "label": {
                                    "id": "label-phone",
                                    "class": "form-label",
                                    "value": "Ваш номер телефона:"
                                }
                            },
                            {
                                "id": "button-send",
                                "type": "submit",
                                "value": "Отправить",
                                "name": "send",
                                "class": "button btn"
                            }
                        ]
                    }
                }
            ],
            "content": {
                "logo": {
                    "img": "logo",
                    "text": "granit",
                    "description": "Доставка нерудных материалов"
                },
